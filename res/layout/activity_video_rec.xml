<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vidRecTopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/vidRecSurfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/vidRecTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time : +1:00"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="right"/>

    <LinearLayout
        android:id="@+id/vidRecBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:gravity="center" android:padding="2dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>